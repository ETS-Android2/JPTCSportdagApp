<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="nl.jpthijsse.sportdag">

    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="16"/>

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:configChanges="orientation|keyboardHidden|keyboard" android:label="@string/app_name" android:name="nl.jpthijsse.sportdag.MainActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:configChanges="orientation|keyboardHidden|keyboard" android:label="@string/app_name" android:name="nl.jpthijsse.sportdag.RecordsActivity" android:parentActivityName="MainActivity" android:screenOrientation="portrait">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="MainActivity"/>
        </activity>
        <activity android:configChanges="orientation|keyboardHidden|keyboard" android:label="@string/app_name" android:name="nl.jpthijsse.sportdag.BegeleidingActivity" android:parentActivityName="MainActivity" android:screenOrientation="portrait">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="MainActivity"/>
        </activity>
        <activity android:configChanges="orientation|keyboardHidden|keyboard" android:label="@string/app_name" android:name="nl.jpthijsse.sportdag.SplashActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/title_activity_sport" android:name="nl.jpthijsse.sportdag.SportActivity" android:parentActivityName="MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="MainActivity"/>
        </activity>
    </application>

</manifest>
