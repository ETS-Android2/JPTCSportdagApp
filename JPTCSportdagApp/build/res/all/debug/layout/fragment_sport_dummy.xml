<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:gravity="center|top">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sport_image"
            android:contentDescription="@string/sport_image_string"
            android:layout_marginBottom="20dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"/>

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/klas_spinner"
            android:layout_below="@id/sport_image"
            android:layout_centerHorizontal="true"/>

    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leerling_spinner"
            android:layout_below="@id/klas_spinner"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>
